{
    "files.watcherExclude": {
        "**/target": true
    },
    "editor.rulers": [120],
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "metals.autoImportBuilds": "all",
    "metals.enableBestEffort": true,
    "metals.enableIndentOnPaste": true,
    "metals.startMcpServer": true,
    "metals.suggestLatestUpgrade": "on"
}